<Homescreen>:
    id: calculator
    display: entry
    rows: 5

    TextInput:
        id: entry
        font_size: 40
        multiline: False
    
    BoxLayout:
        Button:
            text: "7"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "8"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "9"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "+"
            font_size: 40
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "4"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "5"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "6"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "-"
            font_size: 40
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "1"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "2"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "3"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "/"
            font_size: 40
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "AC"
            font_size: 40
            on_press: entry.text = ""
        Button:
            text: "0"
            font_size: 40
            on_press: entry.text += self.text
        Button:
            text: "="
            font_size: 40
            on_press: root.calc(entry.text)
        Button:
            text: "*"
            font_size: 40
            on_press: entry.text += self.text